<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y156">

        <ImageView
            android:layout_marginLeft="@dimen/x28"
            android:layout_centerVertical="true"
            android:id="@+id/item_select"
            android:src="@mipmap/nor_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginLeft="@dimen/x28"
            android:layout_toRightOf="@+id/item_select"
            android:layout_centerVertical="true"
            android:id="@+id/item_image"
            tools:src="@color/color_DC3D27"
            android:layout_width="@dimen/x66"
            android:layout_height="@dimen/y66"/>


        <LinearLayout
            android:layout_marginLeft="@dimen/x16"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_image"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_name"
                tools:text="张一航"
                android:textColor="@color/color_DE1A1A1A"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_phone"
                tools:text="15388249384"
                android:textColor="@color/color_ACACAC"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <View
            android:layout_alignParentBottom="true"
            android:background="@color/color_F5F5F5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"/>

    </RelativeLayout>
</layout>

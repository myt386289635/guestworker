<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:minWidth="@dimen/x538"
        android:background="@color/color_white"
        android:layout_width="@dimen/x538"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/dialog_code"
            tools:src="@color/color_DC3D27"
            android:layout_marginTop="@dimen/y36"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/x242"
            android:layout_height="@dimen/y242"/>


        <ImageView
            android:padding="@dimen/x18"
            android:layout_marginLeft="@dimen/x72"
            android:layout_toRightOf="@+id/dialog_code"
            android:id="@+id/dialog_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dialog_close"/>

        <TextView
            android:textSize="13sp"
            android:textColor="@color/color_959595"
            android:layout_marginTop="@dimen/y4"
            android:layout_below="@+id/dialog_code"
            android:layout_centerHorizontal="true"
            android:text="扫描二维码，查看订单并付款"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="@dimen/y24"
            android:layout_marginTop="@dimen/y66"
            android:layout_below="@+id/dialog_code"
            android:id="@+id/dialog_sure"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="下载付款码"
            android:textColor="@color/color_white"
            android:background="@drawable/bg_bule"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y76"/>


    </RelativeLayout>



</RelativeLayout>